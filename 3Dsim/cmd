input_directory="/home/zmr/sim/4_data/512M/public/"
output_directory="/home/zmr/3Dsim/noChangeOut/"

for file in "$input_directory"*; do
    filename=$file
    statisticfilename="$output_directory$(basename "$file")_TDA_ex.dat"
    outputfilename="output_directory$(basename "$file")_statistic.dat"

    ./My3Dsim -t "$filename" -s "$statisticfilename" -o "$outputfilename"
done

